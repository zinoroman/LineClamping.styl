// @it keep visible only one line of text using `text-overflow: ellipsis` way
.test
    line-clamping(1)
 
// @expect
.test {
    display: block;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

// @it should change display of the element to `inline-block` or `-webkit-inline-box` 
.test
    line-clamping(2, 1.25, 20px, true)
 
// @expect
.test {
    display: inline-block;
    max-height: 50px;
    overflow: hidden;
    font-size: 20px;
    line-height: 1.25;
}
@supports (display: -webkit-inline-box) and (-webkit-line-clamp: 2) {
    .test {
        display: -webkit-inline-box;
        -webkit-box-orient: vertical;
        -webkit-line-clamp: 2;
    }
}


